{
    "preset": "laravel",
    "rules": {
        "line_ending": false,
        "native_function_invocation": {
            "include": ["@compiler_optimized"],
            "scope": "namespaced",
            "strict": true
        },
        "new_with_braces": {
            "anonymous_class": false,
            "named_class": true
        },
        "blank_line_before_statement": {
            "statements": [
                "break",
                "case",
                "continue",
                "declare",
                "default",
                "do",
                "exit",
                "for",
                "foreach",
                "goto",
                "if",
                "include",
                "include_once",
                "phpdoc",
                "require",
                "require_once",
                "return",
                "switch",
                "throw",
                "try",
                "while",
                "yield",
                "yield_from"
            ]
        }
    }
}